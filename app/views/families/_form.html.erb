<div class="row">
  <%= form_for(@family) do |f| %>
    <% if @family.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@family.errors.count, "error") %> prohibited this family from being saved:</h2>

        <ul>
        <% @family.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

  <div class="col-md-6">
      <div class="field">
        <%= f.label :Apellidos %><br>
        <%= f.text_field :last_name ,class:'form-control'%>
      </div><br>
      <div class="field">
        <%= f.label :Cantidad_de_miembros_varones %><br>
        <%= f.number_field :male_members ,class:'form-control'%>
      </div><br>
      <div class="field">
        <%= f.label :Cantidad_de_miembros_mujeres %><br>
        <%= f.number_field :female_members ,class:'form-control'%>
      </div><br>
  </div>
  <div class="col-md-6">
      <div class="field">
        <%= f.label :Telefono %><br>
        <%= f.text_field :phone ,class:'form-control'%>
      </div><br>
      <div class="field">
        <%= f.label :Fecha_de_ingreso %><br>
        <div class="form-inline">
            <%= f.date_select :entry_date, {}, {class:'form-control date-select'} %>
        </div>
      </div><br>
  </div>
</div>
<br>
  <div class="row">
    <div class="center">
      <div class="actions">
        <%= f.submit 'Guardar', class:'btn btn-primary'%>
        <%= link_to 'Atras', :back ,class:'btn btn-default'%>
      </div>
    </div>
  </div>

  <% end %>
